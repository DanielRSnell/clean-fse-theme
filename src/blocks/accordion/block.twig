<div class="accordion">
    {% for item in fields.accordion_items %}
        <div class="collapse collapse-arrow bg-base-200">
            <input type="radio" name="accordion-{{ block.id }}" /> 
            <div class="collapse-title text-xl font-medium">
                {{ item.title }}
            </div>
            <div class="collapse-content">
                {{ item.content }}
            </div>
        </div>
    {% endfor %}
</div>
